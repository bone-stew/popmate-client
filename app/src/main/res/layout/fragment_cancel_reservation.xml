<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.popmate.viewmodel.reservation.MyReservationViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 예약 내역을 표시할 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_cancel_reservations"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>

        <!-- 예약 내역이 없는 경우를 나타내는 뷰 -->
        <TextView
            android:id="@+id/no_reservations_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="예약 내역이 없습니다."
            android:visibility="gone" /> <!-- 초기에는 숨깁니다. -->

    </LinearLayout>
</layout>
