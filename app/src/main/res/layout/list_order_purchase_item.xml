<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/order_detail_item"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_weight="3"
            android:textColor="@color/black"
            android:text="투두투두 잇"/>
        
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/close"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:text="12000"/>
        <TextView
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:text="원"/>

        <ImageView
            android:id="@+id/order_detail_minus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="191dp"
            android:src="@drawable/minus"/>

        <TextView
            android:id="@+id/order_detail_list_price"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:text="1"/>

        <ImageView
            android:id="@+id/order_detail_plus"
            android:layout_width="30dp"
            android:layout_marginLeft="8dp"
            android:layout_height="30dp"
            android:src="@drawable/plus2"/>

    </LinearLayout>

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@color/bg_light_gray"
        android:layout_height="2dp" />

</LinearLayout>
