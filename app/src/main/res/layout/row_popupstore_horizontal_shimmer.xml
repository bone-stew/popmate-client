<?xml version="1.0" encoding="utf-8"?>
<!-- item_shimmer.xml -->
<com.facebook.shimmer.ShimmerFrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:id="@+id/shimmerLayout"
  app:shimmer_auto_start="true"
  app:shimmer_duration="1000">

  <!-- Add placeholder UI components here (e.g., ImageView, TextView, etc.). -->
  <!-- Item layout for each row/column -->
  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="15dp">

      <View
        android:id="@+id/itemPlaceholder"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/tx_light_gray"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

      <View
        android:id="@+id/titleTextView"
        android:layout_width="200dp"
        android:background="@color/tx_light_gray"
        android:layout_height="20dp"
        app:layout_constraintStart_toEndOf="@id/itemPlaceholder"
        app:layout_constraintTop_toTopOf="@id/itemPlaceholder"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginStart="17dp"
        />

      <View
        android:id="@+id/titleTextView2"
        android:layout_width="200dp"
        android:background="@color/tx_light_gray"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="@+id/titleTextView"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        />
          <View
        android:id="@+id/titleTextView3"
        android:layout_width="200dp"
        android:background="@color/tx_light_gray"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView2"
        app:layout_constraintStart_toStartOf="@+id/titleTextView2"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        />
          <View
        android:id="@+id/titleTextView4"
        android:layout_width="200dp"
        android:background="@color/tx_light_gray"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView3"
        app:layout_constraintStart_toStartOf="@+id/titleTextView3"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        />



    </androidx.constraintlayout.widget.ConstraintLayout>


  </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>

