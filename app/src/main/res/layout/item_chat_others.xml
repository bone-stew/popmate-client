<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h7"
        android:textColor="@color/tx_gray"
        android:text="수더분한 굽은오릭스"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="4dp"/>

    <TextView
        android:id="@+id/chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_box"
        android:backgroundTint="@color/bg_light_gray"
        android:gravity="center"
        android:padding="8dp"
        android:maxWidth="200dp"
        android:text="옥지얌"
        android:textColor="@color/tx_gray"
        android:textSize="@dimen/h6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sender" />

    <TextView
        android:id="@+id/time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:text="16:06"
        android:textColor="@color/bg_gray"
        android:textSize="@dimen/h8"
        app:layout_constraintBottom_toBottomOf="@+id/chat_message"
        app:layout_constraintStart_toEndOf="@id/chat_message" />

</androidx.constraintlayout.widget.ConstraintLayout>