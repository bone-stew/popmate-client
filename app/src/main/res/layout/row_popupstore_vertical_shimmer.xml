<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:id="@+id/shimmerLayout"
  app:shimmer_auto_start="true"
  app:shimmer_duration="1000">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:paddingLeft="16dp">


    <!-- Square placeholder with grayish color -->
    <View
      android:id="@+id/itemPlaceholder"
      android:layout_width="160dp"
      android:layout_height="150dp"
      android:background="@color/tx_light_gray"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginBottom="8dp" />

    <!-- Square placeholder with grayish color (title) -->
    <View
      android:id="@+id/titlePlaceholder"
      android:layout_width="160dp"
      android:layout_height="20dp"
      android:background="@color/tx_light_gray"
      app:layout_constraintTop_toBottomOf="@id/itemPlaceholder"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constrainedWidth="true"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp" />

       <View
      android:id="@+id/titlePlaceholder2"
      android:layout_width="160dp"
      android:layout_height="20dp"
      android:background="@color/tx_light_gray"
      app:layout_constraintTop_toBottomOf="@id/titlePlaceholder"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constrainedWidth="true"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp" />

       <View
      android:id="@+id/titlePlaceholder3"
      android:layout_width="160dp"
      android:layout_height="20dp"
      android:background="@color/tx_light_gray"
      app:layout_constraintTop_toBottomOf="@id/titlePlaceholder2"
         app:layout_constraintStart_toStartOf="parent"

         app:layout_constrainedWidth="true"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="8dp" />


  </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
