<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.user.MyPageLogoutActivity">


  <TextView
      android:id="@+id/mypage_login"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="120dp"
      android:layout_marginEnd="261dp"
      android:text="조재룡 "
      android:textColor="@color/black"
      android:textSize="20dp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/img_mypage_write"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_marginTop="124dp"
      android:layout_marginEnd="320dp"
      android:src="@drawable/mypage_write"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/mypage_login"
      app:layout_constraintTop_toTopOf="parent" />

  <LinearLayout
      android:id="@+id/mypage_detail"
      android:layout_width="390dp"
      android:layout_height="85dp"
      android:padding="14dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/mypage_rounded_rectangle"
      android:orientation="vertical"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.506"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/mypage_login">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:text="예약 내역"
          android:textColor="@color/black"
          android:textSize="14dp" />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/mypage_arrow"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_my_page_logout_purchase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="구매 내역"
          android:layout_weight="3"
          android:textColor="@color/black"
          android:textSize="14dp" />

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/mypage_arrow"/>

    </LinearLayout>


  </LinearLayout>

  <LinearLayout
      android:id="@+id/mypage_description"
      android:layout_width="390dp"
      android:layout_height="165dp"
      android:layout_marginTop="40dp"
      android:background="@drawable/mypage_rounded_rectangle"
      android:orientation="vertical"
      android:padding="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.509"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/mypage_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="3"
          android:text="버전 정보"
          android:textColor="@color/black"
          android:textSize="14dp" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="1.0.0"
          android:textColor="@color/tx_light_gray"
          android:textSize="14dp"
          android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="이용 약관"
          android:textColor="@color/black"
          android:textSize="14dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="개인정보처리방침"
          android:textColor="@color/black"
          android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="오픈소스 라이선스"
          android:textColor="@color/black"
          android:textSize="14dp" />

    </LinearLayout>

  </LinearLayout>

  <TextView
      android:id="@+id/txt_mypage_logout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="120dp"
      android:layout_marginEnd="25dp"
      android:layout_marginBottom="32dp"
      android:text="로그아웃"
      android:textColor="@color/tx_light_gray"
      android:textSize="13dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/imageView7"
      app:layout_constraintStart_toStartOf="parent" />

  <TextView
      android:id="@+id/txt_mypage_delete"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="25dp"
      android:layout_marginEnd="120dp"
      android:layout_marginBottom="32dp"
      android:text="회원삭제"
      android:textColor="@color/tx_light_gray"
      android:textSize="13dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imageView7" />

  <ImageView
      android:id="@+id/imageView7"
      android:layout_width="wrap_content"
      android:layout_height="15dp"
      android:layout_marginBottom="34dp"
      android:src="@drawable/line"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/txt_mypage_delete"
      app:layout_constraintStart_toEndOf="@+id/txt_mypage_logout" />


</androidx.constraintlayout.widget.ConstraintLayout>