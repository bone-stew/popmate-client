<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>
    <variable
        name="user"
        type="com.example.popmate.model.data.remote.user.UserInformationResponse" />
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/bg_light_gray"
      android:paddingHorizontal="22dp"
      tools:context=".view.activities.user.MyPageLogoutActivity">

    <TextView
        android:id="@+id/mypage_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="서명현"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        android:padding="16dp"
        android:id="@+id/mypage_detail"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:paddingVertical="14dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/mypage_rounded_rectangle"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_login">


      <LinearLayout
          android:id="@+id/layout_my_reservation_information"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="예약 내역"
            android:textColor="@color/black"
            android:textSize="@dimen/h4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mypage_arrow" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/layout_my_page_logout_purchase"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매 내역"
            android:layout_weight="3"
            android:textColor="@color/black"
            android:textSize="@dimen/h4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mypage_arrow" />

      </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/mypage_description"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:background="@drawable/mypage_rounded_rectangle"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_detail">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="버전 정보"
            android:textColor="@color/black"
            android:textSize="@dimen/h4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0.0"
            android:textColor="@color/tx_light_gray"
            android:textSize="@dimen/h4"
            android:textStyle="normal" />
      </LinearLayout>

      <LinearLayout
          android:id="@+id/layout_my_page_logout_use"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용 약관"
            android:textColor="@color/black"
            android:textSize="@dimen/h4" />

      </LinearLayout>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보처리방침"
            android:textColor="@color/black"
            android:textSize="@dimen/h4" />

      </LinearLayout>

      <LinearLayout
          android:id="@+id/layout_opensource"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오픈소스"
            android:textColor="@color/black"
            android:textSize="@dimen/h4" />

      </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/txt_mypage_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="로그아웃"
        android:textColor="@color/tx_light_gray"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
