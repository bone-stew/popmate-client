<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout

  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".view.fragments.SearchFragment">
  <!-- New LinearLayout on top -->
  <LinearLayout
    android:id="@+id/searchLayout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- Button on the left -->
    <Button
      android:id="@+id/newButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Button" />

    <!-- EditText in the middle -->
    <EditText
      android:id="@+id/newEditText"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:hint="EditText" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/closingSoonLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@+id/searchLayout">

    <TextView
      android:id="@+id/closingSoonText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="끝나기전에 방문하세요!"
      android:layout_marginVertical="23dp"
      android:gravity="start|center_vertical"
      android:layout_marginLeft="16dp"
      android:textSize="16sp"/>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/horizontalView"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      app:layout_constraintTop_toBottomOf="@id/closingSoonText"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
