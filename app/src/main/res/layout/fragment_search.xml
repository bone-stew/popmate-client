<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout

  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".view.fragments.SearchFragment">
  <!-- New LinearLayout on top -->
  <LinearLayout
    android:id="@+id/searchLayout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- Button on the left -->
    <ImageView
      android:id="@+id/img_arrow"
      android:layout_width="20dp"
      android:layout_height="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginStart="15dp"
      android:src="@drawable/arrow2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <!-- EditText in the middle -->
    <SearchView
      android:background="@drawable/shape_search_view"
      android:id="@+id/searchView"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:iconifiedByDefault="false"
      android:searchIcon="@null"
      android:queryHint="검색어를 입력해주세요" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/closingSoonLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@+id/searchLayout">

    <TextView
      android:id="@+id/closingSoonText"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="최근 검색한 팝업스토어"
      android:layout_marginVertical="23dp"
      android:gravity="start|center_vertical"
      android:layout_marginLeft="16dp"
      android:textSize="16sp"/>

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/horizontalView"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      app:layout_constraintTop_toBottomOf="@id/closingSoonText"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
